{
  "dependencies": {
    "express": "^5.1.0",
    "ws": "^8.18.3",
    "nodemailer": "^6.9.14",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.2",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "start": "node -r dotenv/config server.js",
    "build:css": "postcss public/styles.entry.css -o public/style.merged.css",
    "build:css:pretty": "cross-env MINIFY=false postcss public/styles.entry.css -o public/style.merged.css",
    "build:css:min": "cross-env MINIFY=true postcss public/styles.entry.css -o public/style.merged.min.css",
    "build:css:purged": "cross-env MINIFY=false postcss public/styles.entry.css -o public/style.merged.purged.css",
    "build:css:purged:min": "cross-env MINIFY=true postcss public/styles.entry.css -o public/style.merged.purged.min.css"
  }
}
